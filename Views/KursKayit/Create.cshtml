@model KursKayit

<h2>Kurs Kayıt Ekleme</h2>

<hr>

<form asp-controller="KursKayit" asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="OgrenciId" class="form-label" >Öğrenci ID</label>
        <select asp-for="OgrenciId" asp-items="ViewBag.Ogrenciler" class="form-control" >
            <option value="">Seçiniz</option>
        </select>
    </div>
    <div>
        <label asp-for="KursId" class="form-label" >Kurs ID</label>
        <select asp-for="KursId" asp-items="ViewBag.Kurslar" class="form-control" >
            <option value="">Seçiniz</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary mt-3 mb-3">Kaydet</button>

</form>
    

    <a href="/KursKayit/Index" class="btn btn-secondary" >Kayıt Listesi</a>