@model Kurs

<h4>Kurslar</h4>
<hr>

<div class="row">

    <div class="col-8">

        <form asp-controller="Kurs" asp-action="Edit" method="post">
            <div asp-validation-summary="All" ></div>
            <input type="hidden" asp-for="KursId">
            <div class="mb-3">
                <label asp-for="Baslik" class="form-label" >Kurs Adı</label>
                <input asp-for="Baslik" class="form-control" >
            </div>

            <div class="div mb-3">
                <label asp-for="OgretmenId" class="form-label" >Öğretmen</label>
                <select asp-for="OgretmenId" asp-items="ViewBag.Ogretmenler" class="form-select">
                    <option value="">Seçiniz</option>
                </select>
        
            </div>
        
            <button type="submit" class="btn btn-primary mt-3 mb-3">Kaydet</button>
        
        </form>

        <a href="/Kurs/Index" class="btn btn-secondary" >Geri Dön</a>

    </div>

    <div class="col-4">
        <h5>Kayıtlı Öğrenciler</h5>
        <ul>
            @foreach(var item in @Model.KursKayitlari)
            {
                <li>@item.Ogrenci.AdSoyad</li>
            }
        </ul>

    </div>


</div>




    

  