@model Ogretmen

<h2>Öğrenci Ekleme</h2>
<hr>

<form asp-controller="Ogretmen" asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="OgretmenAdi" class="form-label" >Öğretmen Adı</label>
        <input asp-for="OgretmenAdi" class="form-control" >
    </div>
    <div>
        <label asp-for="OgretmenSoyadi" class="form-label" >Öğretmen Soyadı</label>
        <input asp-for="OgretmenSoyadi" class="form-control" >
    </div>

    <div>
        <label asp-for="Eposta" class="form-label" >E-Posta</label>
        <input asp-for="Eposta" class="form-control" >
    </div>

    <div>
        <label asp-for="Telefon" class="form-label" >Telefon</label>
        <input asp-for="Telefon" class="form-control" >
    </div>

    <button type="submit" class="btn btn-primary mt-3 mb-3">Kaydet</button>

</form>
    

    <a href="/Ogretmen/Index" class="btn btn-secondary" >Öğretmen Listesi</a>